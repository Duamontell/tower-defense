{% extends "base.html.twig" %}

{% block title %}Выбор уровня
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/styles/css/select-level.css">
{% endblock %}

{% block javascripts %}
	<script defer type="module" src="/js/ui/menu.js"></script>
{% endblock %}

{% block body %}
	<div class="level-select-container">
		<div class="level-header">
			<h1>Выберите уровень</h1>
		</div>
		<div class="level-map">
			<svg class="map-paths" width="100%" height="100%" viewbox="0 0 700 400" style="position:absolute;top:0;left:0;z-index:1;pointer-events:none;">
				<line x1="105" y1="65" x2="245" y2="110" stroke="#3a2e1a" stroke-width="3" stroke-linecap="round" stroke-dasharray="12,10"/>
			</svg>
			<img src="/styles/images/map-bg.webp" class="map-bg">
			<button class="map-level" style="top: 20%; left: 15%;" id="lvl1">1</button>
			<button class="map-level" style="top: 30%; left: 35%;" id="lvl2">2</button>
		</div>
	</div>
{% endblock %}
