{% extends "base.html.twig" %}

{% block title %}
	Регистрация
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/styles/css/registration.css">
{% endblock %}

{% block body %}
	<div class="registration-container">
		<h1>Регистрация нового пользователя</h1>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                {# Есть разные типы сообщений: success, error, warning #}
                <div class="flash-{{ label }}">
                    {{ message|raw }}
                </div>
            {% endfor %}
        {% endfor %}
		<form method="POST" action="/register">
			<div class="field">
                <label>
                    Имя пользователя
                    <input type="text" name="name" placeholder="Имя пользователя" maxlength="50" required autofocus>
                </label>
				<label>
					Email
					<input type="email" name="email" placeholder="Email" maxlength="50" required autofocus>
				</label>
				<label>
					Пароль
					<input type="password" name="password" placeholder="Пароль" maxlength="20" required>
				</label>
				<button type="submit">Зарегистрироваться</button>
			</div>
		</form>
		<div class="register-link">
			<span>Уже есть аккаунт?</span>
			<a href="/login">Войти</a>
		</div>
	</div>
{% endblock %}
